{
  "compileOnSave": false,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "system",
    "target": "ES5",
    "moduleResolution": "classic",
    "sourceMap": true
  },
  "filesGlob": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "jspm_packages"
  ],
  "files": [
    "src/app.ts",
    "src/contact-detail.ts",
    "src/contact-list.ts",
    "src/main.ts",
    "src/no-selection.ts",
    "src/services/constants.ts",
    "src/services/contact.ts",
    "src/services/store.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
